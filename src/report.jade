doctype html
html
    head
        title #{repo} BranchName Report
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css")
    
    body
        div.container
            h1 #{repo} Branch Report
            p Generated: #{runDate.format('MMMM Do, YYYY @ h:mm:ss a')}
            h2 Branches&nbsp;
                small (#{_branches.length})
            table.table.table-condensed.table-striped
                thead
                    tr
                        th Name
            tbody
                    each branch in _branches
                        tr
                        li
                            td= branch._name
                        br
    

    footer
        p.text-right
            small: a(href='https://github.com/usnistgov/github-branch-reports') Generated by github-branch-reports